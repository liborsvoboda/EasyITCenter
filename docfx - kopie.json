{
  "metadata": [
    {
      "src": [
        {
          "files": [
		    //"EASY-IT-CENTER-SERVER/*.csproj",
            "EASY-IT-CENTER-SYSTEM/*.csproj",
			//"EASY-TOOLS/*.sln"
		  ],
		  "exclude": ["EIC-DOC/**","**/wwwroot/**"]
        }
      ],
      "dest": "api",
	  "includePrivateMembers": true,
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "memberLayout": "separatePages"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml,cs}"
        ],
        "exclude": ["EIC-DOC/**", "**/wwwroot/**", "EASY-ADDONS/**", "EASY-TOOLS/**", "_site/**", "bin/**", "obj/**"]
      }
    ],
    "resource": [
      {
        "files": [ "Images/**"]
      }
    ],
    "output": "InfoWeb",
    "template": [
      "default",
      "modern",
	  "singulinkfx"
    ],
    "globalMetadata": {
      "_appName": "EasyITCenter & EasySYSTEMbuilder",
      "_appTitle": "EasyITCenter & EasySYSTEMbuilder InfoWeb",
	  "_appFooter": "EasyITCenter & EasySYSTEMbuilder Komplexní Řešení pro Vaše IT",
	  "_appLogoPath": "images/logo.png",
	  "_enableNewTab": true,
	  "_disableSideFilter": false,
	   "_disableContribution": false,
      "_disableBreadcrumb": false,
      "_enableSearch": true,
	  "markdownEngineName": "markdig",
      "pdf": false
    },
	 "sitemap": {
      "baseUrl": "https://kliknetezde.cz/docfx",
      "priority": 0.5,
      "changefreq": "daily"
    },
	"rules": {
		"InvalidHref": "info"
	},
    "postProcessors": [],
    "disableGitFeatures": false,
    "exportViewModel": true
  }
}