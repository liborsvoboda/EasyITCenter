<UserControl
    x:Class="LiveCharts.Wpf.HeatColorRange"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="Auto"
    d:DataContext="{d:DesignInstance local:HeatColorRange}"
    d:DesignHeight="100"
    d:DesignWidth="50"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            Name="MinVal" Padding="5,0" HorizontalAlignment="Center"
            Text="{Binding Min}" />
        <TextBlock
            Name="MaxVal" Padding="5,0" HorizontalAlignment="Center" VerticalAlignment="Bottom"
            Text="{Binding Max}" />
    </Grid>
</UserControl>
