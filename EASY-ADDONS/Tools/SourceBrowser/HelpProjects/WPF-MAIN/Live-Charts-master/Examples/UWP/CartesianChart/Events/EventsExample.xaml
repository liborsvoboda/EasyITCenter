<Page
    x:Class="UWP.CartesianChart.Events.EventsExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="using:LiveCharts.Uwp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <lvc:CartesianChart
            Name="Chart" Grid.Row="1" DataClick="ChartOnDataClick"
            DataClickCommand="{Binding DataClickCommand}"
            DataHover="Chart_OnDataHover"
            DataHoverCommand="{Binding DataHoverCommand}"
            UpdaterTick="ChartOnUpdaterTick"
            UpdaterTickCommand="{Binding UpdaterTickCommand}"
            Zoom="Xy">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis RangeChanged="Axis_OnRangeChanged" RangeChangedCommand="{Binding RangeChangedCommand}" />
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.Series>
                <lvc:LineSeries
                    Fill="Transparent" PointGeometrySize="25" StrokeThickness="4"
                    Values="{Binding Values}" />
            </lvc:CartesianChart.Series>
        </lvc:CartesianChart>
    </Grid>
</Page>
