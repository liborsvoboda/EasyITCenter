<Page
    x:Class="UWP.PieChart.PieChartExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UWP.PieChart"
    xmlns:lvc="using:LiveCharts.Uwp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <lvc:PieChart LegendLocation="Bottom">
            <lvc:PieChart.Series>
                <lvc:PieSeries
                    Title="Maria" DataLabels="True"
                    LabelPoint="{Binding PointLabel}"
                    PushOut="20"
                    Values="{Binding Values1}" />
                <lvc:PieSeries
                    Title="Charles" DataLabels="True"
                    LabelPoint="{Binding PointLabel}"
                    Values="{Binding Values2}" />
                <lvc:PieSeries
                    Title="Frida" DataLabels="True"
                    LabelPoint="{Binding PointLabel}"
                    Values="{Binding Values3}" />
                <lvc:PieSeries
                    Title="Frederic" DataLabels="True"
                    LabelPoint="{Binding PointLabel}"
                    Values="{Binding Values4}" />
            </lvc:PieChart.Series>
        </lvc:PieChart>
    </Grid>
</Page>
