
@model UserItem
@{
    ViewData["Title"] = "Delete User";
}
<div class="container" style="padding-top: 4%">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mx-4">
                <div class="card-body p-4">
                    <form id="DeleteUserForm" method="post">
                        <div class="card-title"><h5>Do you want to delete this user?</h5></div>
                        <div class="form-group">
                            <label asp-for="UserName" class="col-form-label"></label>
                            <input asp-for="UserName" class="form-control" readonly="readonly" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="col-form-label"></label>
                            <input asp-for="Email" class="form-control" readonly="readonly" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactName" class="col-form-label"></label>
                            <input asp-for="ContactName" class="form-control" readonly="readonly" />
                        </div>
                        <div class="form-actions pull-right">
                            <button type="submit" class="btn btn-danger" id="DeleteUserButton">Delete</button>
                            <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Index","Team")'">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_EasyDataScriptsPartial" />
    <script>
        $(function() {
            $("#DeleteUserForm").submit(function(event) {
                if (!event.isPropagationStopped()) {
                    easydata.ui.dialogs.openProgress({
                        title: "Deleting the account",
                        content: "This user's account is being deleted. It can take a while..."
                    });
                }
            });        
        })
    </script>
}
