@{
    ViewData["Title"] = "Password reset confirmation";
}

<div class="container" style="padding-top: 4%">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mx-4">
                <div class="card-body p-4">
                    <p class="text-muted">
                        Please check your email. We've sent a message with instructions on how to reset your password. <br />
                        <b>NB</b>: Don't forget to check your Spam (Junk) folder if you don't received the message within the next 10 minutes.
                    </p>
                    <button type="button" class="btn btn-link px-0" onclick="window.location.href='@Url.Action("Index","Home")'">Back to Home page</button>
                </div>
            </div>
        </div>
    </div>
</div>

