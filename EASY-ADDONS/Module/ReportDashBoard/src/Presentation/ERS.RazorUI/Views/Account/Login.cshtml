@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@model LoginViewModel
@inject             SignInManager<ERS.Models.ApplicationUser> SignInManager
@inject AppGlobals Globals

@{
    ViewData["Title"] = "Login";
}
<div class="container" style="padding-top: 4%">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-group">
                <div class="card p-4">
                    <div class="card-body">
                        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            <h1>Login</h1>
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <p class="text-muted">to access your existing account</p>

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                                </div>
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                </div>
                                <input asp-for="Password" class="form-control" placeholder="Password" />
                            </div>
                            <div class="input-group mb-4 text-muted">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" asp-for="RememberMe" />
                                    <label class="custom-control-label" asp-for="RememberMe"></label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary px-4">Login</button>
                                </div>
                                <div class="col-6 text-right">
                                    <button type="button" class="btn btn-link px-0" onclick="window.location.href='@Url.Action("ForgotPassword","Account")'">Forgot password?</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card text-white bg-primary py-4 d-md-down-none" style="width:44%">
                    <div class="card-body">
                        <h1>Sign up</h1>
                        @if (!Globals.MultiTenancy)
                        {
                            <p>
                                Ask your team administrator to get a new account.
                            </p>
                        }
                        else
                        {
                            <p>
                                Here you can create a new team together with an administrator account for this team. <br />
                                Please note: if you need to get an account for an existing team - you need to ask your team's administrator
                                to register you.
                            </p>

                            <div class="text-center">
                                <button type="button" class="btn btn-primary active mt-4" onclick="window.location.href='@Url.Action("Team","Setup")'">Register Your Team</button>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>

 
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
