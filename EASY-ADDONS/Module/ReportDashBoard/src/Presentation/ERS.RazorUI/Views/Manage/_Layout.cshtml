@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center " style="padding-top: 1%">
    <div class="col-lg-9 col-md-10">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h5>Change your account settings</h5>
                </div>
                <hr />
                <div class="row " style="padding-top: 1%">
                    <div class="col-lg-4">
                        <div class="card">
                            @await Html.PartialAsync("_ManageNav")
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="card">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @RenderSection("Scripts", required: false)
}

