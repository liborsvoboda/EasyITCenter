@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@inject IOptions<RequestLocalizationOptions> LocOptions


@model ManageIndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);

    var cultureItems = LocOptions.Value.SupportedUICultures
       .Select(c => new SelectListItem { Value = c.Name, Text = c.NativeName })
       .ToList();

    var timeZoneItems = new SelectList(TimeZoneInfo.GetSystemTimeZones(), "Id", "DisplayName");
}

<div class="card-header">
    <i class="fa fa-user"></i>@ViewData["Title"]
</div>
<div class="card-body">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Username" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-form-label"></label>
            @if (Model.IsEmailConfirmed)
            {
                <div class="input-group">
                    <input asp-for="Email" class="form-control" />
                    <div class="input-group-prepend">
                        <span class="input-group-text" aria-hidden="true" title="Email is confirmed"><i class="fa fa-check"></i></span>
                    </div>
                </div>
            }
            else
            {
                <div class="input-group">
                    <input asp-for="Email" class="form-control" />
                    <div class="input-group-prepend">
                        <span class="input-group-text" aria-hidden="true" title="Email is not confirmed"><i class="fa fa-close"></i></span>
                    </div>
                </div>
                <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
            }
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContactName" class="col-form-label"></label>
            <input asp-for="ContactName" class="form-control" />
            <span asp-validation-for="ContactName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TimeZoneId" class="col-form-label"></label>
            <select asp-for="TimeZoneId" class="form-control" asp-items="@timeZoneItems"></select>
        </div>
        <div class="form-group">
            <label asp-for="CultureId" class="col-form-label"></label>
            <select asp-for="CultureId" class="form-control" asp-items="@cultureItems">
                <option value="@null">Default (browser)</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
