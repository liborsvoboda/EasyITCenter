@model EasyGitServer.Models.RegisterModel
@{
    ViewBag.Title = "Registration";
}
<div class="user signin">
    <div class="ui middle very relaxed page grid">
        <div class="column">
            <form class="ui form" asp-action="Register" method="post">
                <h3 class="ui top attached header">
                    New User Registration
                </h3>
                <div class="ui attached segment">
                    <div class="required inline field ">
                        <label for="Username">Login Name</label>
                        <input id="Username" name="Username" value="" autofocus required>
                    </div>
                    <div class="required inline field ">
                        <label for="user_email">Email Address</label>
                        <input id="user_email" name="Email" value="" autofocus required>
                    </div>
                    <div class="required inline field ">
                        <label for="password">Password</label>
                        <input id="password" name="Password" type="password" value="" placeholder="minimal 8 char" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="required inline field ">
                        <label for="ConfirmPassword">Retype Password</label>
                        <input id="ConfirmPassword" name="ConfirmPassword" type="password" value="" placeholder="minimal 8 char" required>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="inline field">
                        <label></label>
                        <button class="ui teal button">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>