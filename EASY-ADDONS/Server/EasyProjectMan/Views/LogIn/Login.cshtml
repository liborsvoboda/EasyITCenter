@model ProjectManagement.Models.ViewModels.AuthenticationViewModel;

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/assets/vendor/chart.js/Chart.min.js" rel="stylesheet" />
<link href="~/assets/css/sb-admin.min.css" rel="stylesheet" />
<link href="~/assets/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
<!-- Bootstrap core CSS-->
<link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

<!-- Custom fonts for this template-->
<link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

<!-- Page level plugin CSS-->
<link href="~/assets/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

<!-- Custom styles for this template-->
<link href="~/assets/css/sb-admin.css" rel="stylesheet">
<style>


</style>

<div>
    <div class="col-md-12" style="height: 10%; width: 100%"></div>
    <div class="col-md-12" style="height: 50%; width: 100%;">
        <!-- Icon Cards-->
        <div class="row">
            <div class="col-xl-3 col-sm-6 mb-3">
                <div class="card text-white o-hidden h-100" style="background-color: #880E4F;">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fas fa-folder"></i>
                        </div>
                        <div class="mr-5"><strong style="font-size: 30px;">@ViewData["NoOfProjects"]</strong> Projects!</div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" href="#">
                        <span class="float-left">View Details</span>
                        <span class="float-right">
                            <i class="fas fa-angle-right"></i>
                        </span>
                    </a>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
                <div class="card text-white o-hidden h-100" style="background-color: #388E3C;">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fas fa-tasks"></i>
                        </div>
                        <div class="mr-5"><strong style="font-size: 30px;">@ViewData["NoOfTasks"]</strong> Tasks!</div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" href="#">
                        <span class="float-left">View Details</span>
                        <span class="float-right">
                            <i class="fas fa-angle-right"></i>
                        </span>
                    </a>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
                <div class="card text-white o-hidden h-100" style="background-color: #1A237E">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fas fa-plus-square"></i>
                        </div>
                        <div class="mr-5"><strong style="font-size: 30px">@ViewData["NoOfNewTasks"]</strong> New Tasks!</div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" href="#">
                        <span class="float-left">View Details</span>
                        <span class="float-right">
                            <i class="fas fa-angle-right"></i>
                        </span>
                    </a>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
                <div class="card text-white bg-danger o-hidden h-100">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fas fa-comments"></i>
                        </div>
                        <div class="mr-5"><strong style="font-size: 30px">@ViewData["NoOfNewComments"]</strong> New Comments!</div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" href="#">
                        <span class="float-left">View Details</span>
                        <span class="float-right">
                            <i class="fas fa-angle-right"></i>
                        </span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Area Chart Example-->
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-chart-area"></i>
                        This Year Project
                    </div>
                    <div class="card-body">
                        <canvas id="myAreaChart" style="height: 100%; width: 100%"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-chart-pie"></i>
                        Project of This and Previous Year
                    </div>
                    <div class="card-body">
                        <canvas id="myPieChart" style="height: 100%; width: 100%"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12" style="height: 40%; width: 100%">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4"  style="border: 1px solid #FAFAFA; border-radius: 10px; background-color: #F5F5F5">
                <form asp-action="Login" class="form-horizontal" style="padding: 7px;">
                    <h3>Log in</h3><hr />

                    <img src="~/assets/LogImage/avater.jpg" style="height: 90px; width: 90px; border-radius: 100%; display: block; margin-left: auto; margin-right: auto" />
                
                    <div style="padding: 4px">
                        @Html.Raw(ViewData["Message"])
                    </div>
                
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <br />
                        <input type="email" class="form-control" asp-for="Email" placeholder="eg: admin@mailAddress.com" />

                        <span asp-validation-for="Email" style="color: red"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <br />
                        <input type="password" class="form-control" asp-for="Password" placeholder="Write your password" />

                        <span asp-validation-for="Password" style="color: red"></span>

                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-default" style="width: 100%;" value="Login" />
                    </div>
                    <hr/>
                </form>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/assets/vendor/chart.js/Chart.min.js"></script>

<script>
    Chart.defaults.global.defaultFontFamily = '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
    Chart.defaults.global.defaultFontColor = '#292b2c';

    // Area Chart
    var ctx = document.getElementById("myAreaChart");
    var myLineChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sept", "Oct", "Nov", "Dec"],
            datasets: [{
                label: "Total Projects",
                lineTension: 0.3,
                backgroundColor: "#A5D6A7",
                borderColor: "#00796B",
                pointRadius: 5,
                pointBackgroundColor: "#004D40",
                pointBorderColor: "#212121",
                pointHoverRadius: 5,
                pointHoverBackgroundColor: "#26A69A",
                pointHitRadius: 50,
                pointBorderWidth: 2,
                data: [@ViewData["Jan"], @ViewData["Feb"], @ViewData["Mar"], @ViewData["Apr"], @ViewData["May"], @ViewData["Jun"], @ViewData["Jul"], @ViewData["Aug"], @ViewData["Sept"], @ViewData["Oct"], @ViewData["Nov"], @ViewData["Dec"]],
            }],
        },
        options: {
            scales: {
                xAxes: [{
                    time: {
                        unit: 'date'
                    },
                    gridLines: {
                        display: false
                    },
                    ticks: {
                        maxTicksLimit: 7
                    }
                }],
                yAxes: [{
                    ticks: {
                        min: 0,
                        max: 5,
                        maxTicksLimit: 5
                    },
                    gridLines: {
                        color: "#ECEFF1",
                    }
                }],
            },
            legend: {
                display: false
            }
        }
    });


    // pie chart
    var ctx = document.getElementById("myPieChart");
    var myPieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: [@DateTime.Now.Year, @DateTime.Now.Year-1, @DateTime.Now.Year-2],
            datasets: [{
                data: [@ViewData["ThisYear"], @ViewData["LastYear"], @ViewData["PrevLastYear"]],
                backgroundColor: ['#00695C', '#D84315', '#1565C0'],
            }],
        },
    });
</script>