<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - GitServer</title>
    <meta charset="utf-8" />

    <link href="/gitgub/semantic/semantic.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/gitgub/css/main.css" />
    <link href="/gitgub/css/metro-all.min.css" rel="stylesheet" />

    <script src="/gitgub/js/jquery.min.js"></script>
    <script src="/gitgub/semantic/semantic.min.js"></script>
    <script src="/gitgub/js/metro.min.4.5.2.js"></script>
    <script src="/gitgub/js/globalBehavior.js"></script>
    <script src="/gitgub/js/globalFunctions.js"></script>
    <script src="/gitgub/js/globalStorage.js"></script>

    <link rel="shortcut icon" href="/gitgub/img/favicon.ico" />
</head>
<body>
    <div class="full height">
        <noscript>Please enable JavaScript in your browser!</noscript>
        <div class="following bar light">
            <div class="ui container">
                <div class="ui grid">
                    <div class="column">
                        <div class="ui top secondary menu">
                            <a class="item brand" href="/">
                                <img src="/gitgub/img/logo_white.svg" alt="GitServer" class="logo-image" title="Home" />
                            </a>

                            <a class="item" href="/Github/Home/Public">Public Repository</a>
                            <a class="item" href="/Github/Home/Shared">Shared Repository</a>

                            <div class="pos-relative pos-top-left mt-4" style="width:350px;">
                                <div id="google_translate_element"></div>
                            </div>
@*                             <a class="item" href="/">přední strana</a>
                            <a class="item" href="#">prozkoumat</a> *@

                            <div class="right menu">
                                @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                                {
                                    <a class="item" href="#">@ViewContext.HttpContext.User.Identity.Name</a>
                                    <a class="item" href="/Github/User/Signout">Logout</a>
                                }
                                else
                                {
                                    <a class="item" href="/Github/User/Login">Login</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="ui container dashboard">
            @RenderBody()
        </div>        
    </div>
    <footer>
        <div class="ui container">
            <div class="ui left">
                Groupware-Solution © 2023 Privátní GitServer Verze: '1.5' Datum: 20.09.2023
            </div>
            <div class="ui right links">
                <a target="_blank" href="https://GropWare-Soltion.Eu">GropWare-Solution.Eu</a>
            </div>
        </div>
    </footer>

    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</body>
</html>
