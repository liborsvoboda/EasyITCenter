<UserControl
    x:Class="EasyITSystemCenter.Pages.ServerToolPanelDefinitionListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:bh="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:EasyITSystemCenter.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DataContext="{d:DesignInstance Type=local:ServerToolPanelDefinitionListPage}"
    d:DesignHeight="500"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" IsReadOnly="True" MouseDoubleClick="DgListView_MouseDoubleClick" SelectionChanged="DgListView_SelectionChanged" SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource WhiteBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />

                <RowDefinition Height="Auto" />
                <RowDefinition Height="110" />
            </Grid.RowDefinitions>

            <Label
                x:Name="lbl_id"
                Grid.Row="0" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_id"
                Grid.Row="0" Grid.Column="1"
                Margin="0,2,0,2" HorizontalContentAlignment="Left"
                HideUpDownButtons="True" IsEnabled="False" ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_toolType"
                Grid.Row="1" Grid.Column="1"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_toolType"
                Grid.Row="1" Grid.Column="2"
                Margin="0,2,0,2" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Controls:TextBoxHelper.ClearTextButton="false" Controls:TextBoxHelper.IsWaitingForData="True" DisplayMemberPath="Name" IsEnabled="true" SelectedValuePath="Id" />

            <Label
                x:Name="lbl_systemName"
                Grid.Row="2" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                ToolTip="Translation will be used as Title" />

            <TextBox
                x:Name="txt_systemName"
                Grid.Row="2" Grid.Column="1"
                Margin="0,2,0,2"
                TextChanged="TextChanged" ToolTip="Shown Name it will be translatted yoour inserted description " />

            <Label
                x:Name="lbl_type"
                Grid.Row="3" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_type"
                Grid.Row="3" Grid.Column="1"
                Margin="0,2,0,2" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                DisplayMemberPath="Value" IsEnabled="true" SelectedValuePath="Name" ToolTip="Url is Any full Url,EDCservice is server service example /path - host is used from configuration, WINcmd is not used" />

            <Label
                x:Name="lbl_command"
                Grid.Row="4" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_command"
                Grid.Row="4" Grid.Column="1"
                Margin="0,2,85,2"
                TextChanged="TextChanged" ToolTip="Its standard 'cmd command' or URL" />
            <Button
                x:Name="btn_commandTest"
                Grid.Row="4" Grid.Column="1"
                Width="80" Height="25"
                Margin="0,2,0,0" Padding="5,4,5,5" HorizontalAlignment="Right" VerticalAlignment="Top"
                Click="BtnCommandTest_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />

            <Label
                x:Name="lbl_iconColor"
                Grid.Row="5" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <xctk:ColorPicker
                x:Name="xct_iconColor"
                Grid.Row="5" Grid.Column="1"
                Margin="0,2,5,2" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"
                SelectedColorChanged="ColorChanged" ShowAvailableColors="True" ShowTabHeaders="False" />

            <Label
                x:Name="lbl_backgroundColor"
                Grid.Row="6" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <xctk:ColorPicker
                x:Name="xct_backgroundColor"
                Grid.Row="6" Grid.Column="1"
                Margin="0,2,5,2" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"
                SelectedColorChanged="ColorChanged" ShowAvailableColors="True" ShowTabHeaders="False" />

            <Label
                x:Name="lbl_selectIcon"
                Grid.Row="7" Grid.Column="0"
                HorizontalAlignment="Right" />

            <WrapPanel
                x:Name="viewIcon"
                Grid.Row="7" Grid.Column="0"
                Margin="50,50,50,50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Controls:Tile
                    Name="t_generatedIcon"
                    Title="{Binding SystemName}"
                    Width="200" Height="200"
                    Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Cursor="Hand" FontWeight="DemiBold" HorizontalTitleAlignment="Left" TitleFontSize="20" VerticalTitleAlignment="Bottom">
                    <Image
                        x:Name="i_generatedIcon"
                        Width="120" Height="120"
                        VerticalAlignment="Top" />
                </Controls:Tile>
            </WrapPanel>

            <ScrollViewer
                x:Name="sp_iconViewer"
                Grid.Row="7" Grid.Column="1"
                VerticalAlignment="Stretch"
                ScrollViewer.VerticalScrollBarVisibility="Auto">

                <ListView
                    x:Name="lv_iconViewer"
                    ItemContainerStyle="{StaticResource IconItemStyle}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="IconSelect_Click">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Bottom" Text="{Binding Name}" />
                                <Image
                                    Width="32" Height="32"
                                    Source="{Binding BitmapImage}" />
                            </DockPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>

            <Label
                x:Name="lbl_description"
                Grid.Row="8" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_description"
                Grid.Row="8" Grid.Column="1"
                Margin="0,2,0,2"
                AcceptsReturn="True" TextChanged="TextChanged" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" />

            <Button
                Name="btn_save"
                Grid.Row="10" Grid.Column="0"
                Width="200" Height="40"
                Margin="44,21,0,44" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Click="BtnSave_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
            <Button
                Name="btn_cancel"
                Grid.Row="10" Grid.Column="1"
                Width="200" Height="40"
                Margin="44,21,44,44" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Click="BtnCancel_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>