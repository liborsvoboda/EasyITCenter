<UserControl
    x:Class="EasyITSystemCenter.Pages.SolutionMessageModuleListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:html="clr-namespace:EASYTools.HTMLFullEditor;assembly=EASYTools.HTMLFullEditor"
    xmlns:local="clr-namespace:EasyITSystemCenter.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="500"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" IsReadOnly="True" MouseDoubleClick="DgListView_MouseDoubleClick" SelectionChanged="DgListView_SelectionChanged" SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource LightColorBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <Label
                x:Name="lbl_id"
                Grid.Row="0" Grid.Column="0"
                HorizontalAlignment="Left" HorizontalContentAlignment="Left" />
            <mah:NumericUpDown
                x:Name="txt_id"
                Grid.Row="0" Grid.Column="0"
                Width="200"
                Margin="0,2,0,2" HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                mah:TextBoxHelper.ClearTextButton="False" mah:TextBoxHelper.Watermark="" HideUpDownButtons="True" IsEnabled="False" ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_messageType"
                Grid.Row="0" Grid.Column="1"
                HorizontalAlignment="Left" HorizontalContentAlignment="Left" />
            <ComboBox
                Name="cb_messageType"
                Grid.Row="0" Grid.Column="1"
                Margin="200,2,0,2" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                mah:TextBoxHelper.ClearTextButton="false" DisplayMemberPath="Translation" IsEnabled="true" SelectedValuePath="Id" SelectionChanged="MessageTypeChanged" />


            <Label
                x:Name="lbl_forGuest"
                Grid.Row="1" Grid.Column="1"
                Width="200"
                HorizontalAlignment="Left" HorizontalContentAlignment="Left"
                Visibility="Hidden" />

            <ComboBox
                Name="cb_forGuest"
                Grid.Row="1" Grid.Column="1"
                Margin="200,2,0,2" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                mah:TextBoxHelper.ClearTextButton="false" DisplayMemberPath="Email" IsEnabled="true" SelectedValuePath="Id" Visibility="Hidden" />

            <Button
                Name="btn_doAnswer"
                Grid.Row="2" Grid.Column="0"
                Width="100"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                mah:ButtonHelper.PreserveTextCase="True" Click="BtnDoAnswer_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}"
                Visibility="Hidden" />

            <TextBox
                x:Name="txt_parentMessageSubject"
                Grid.Row="2" Grid.Column="0"
                Margin="110,2,0,2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right"
                mah:TextBoxHelper.ClearTextButton="True" IsEnabled="False" Visibility="Hidden" />

            <Label
                x:Name="lbl_subject"
                Grid.Row="2" Grid.Column="1"
                HorizontalAlignment="Left" HorizontalContentAlignment="Left" />
            <TextBox
                x:Name="txt_subject"
                Grid.Row="2" Grid.Column="1"
                Margin="100,2,0,2" HorizontalAlignment="Stretch"
                mah:TextBoxHelper.ClearTextButton="True" />

            <Label
                x:Name="lbl_variables"
                Grid.Row="3" Grid.Column="0"
                Width="150"
                HorizontalAlignment="Left" HorizontalContentAlignment="Left" />

            <TextBox
                x:Name="txt_variables"
                Grid.Row="3" Grid.Column="0"
                Margin="160,2,0,2" HorizontalAlignment="Stretch"
                mah:TextBoxHelper.ClearTextButton="False" IsReadOnly="True" />


            <Button
                Name="btn_loadFromFile"
                Grid.Row="3" Grid.Column="1"
                Width="140"
                Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                mah:ButtonHelper.PreserveTextCase="True" Click="BtnLoadFromFile_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
            <Button
                Name="btn_showPreview"
                Grid.Row="3" Grid.Column="1"
                Width="140"
                Margin="150,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                mah:ButtonHelper.PreserveTextCase="True" Click="BtnShowPreview_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />


            <Label
                x:Name="lbl_archive"
                Grid.Row="3" Grid.Column="1"
                Margin="0,0,25,0" Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top" HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_archive"
                Grid.Row="3" Grid.Column="1"
                Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top" />

            <Label
                x:Name="lbl_publish"
                Grid.Row="3" Grid.Column="1"
                Margin="0,0,25,0" Padding="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_publish"
                Grid.Row="3" Grid.Column="1"
                Padding="0" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Checked="PublishChanged" Unchecked="PublishChanged" />

            <html:HtmlEditor
                x:Name="html_htmlMessage"
                Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="0,2,0,2"
                BorderThickness="0.5" />




            <Button
                Name="btn_save"
                Grid.Row="5" Grid.Column="0"
                Width="200" Height="40"
                Margin="44,10,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                mah:ButtonHelper.PreserveTextCase="True" Click="BtnSave_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
            <Button
                Name="btn_cancel"
                Grid.Row="5" Grid.Column="1"
                Width="200" Height="40"
                Margin="44,10,44,10" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Click="BtnCancel_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>