<UserControl
    x:Class="EasyITSystemCenter.Pages.SystemCustomPageListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EasyITSystemCenter.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="500"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" IsReadOnly="True" MouseDoubleClick="DgListView_MouseDoubleClick" SelectionChanged="DgListView_SelectionChanged" SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource WhiteBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="80" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <Label
                x:Name="lbl_id"
                Grid.Row="0" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_id"
                Grid.Row="0" Grid.Column="1"
                Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" HideUpDownButtons="True" IsEnabled="False" ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_pageName"
                Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_pageName"
                Grid.Row="1" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" >
                <TextBox.ToolTip>
                    <TextBlock>
                        Type: Standalone Unique Page for One Only Agenga, using is Same as Normal SYSTEM Agendas<LineBreak />
                        Type: System Web Server Module with _XXX marking, <LineBreak />
                        Its Standalone App in AddOn/WebData With Get/Set JS Cmd for ONE Field and Generic Form By TableName <LineBreak />
                        Type: Standalone Server Web App with ServerUrl Path With Get/Set JS Cmd for ONE Field and Generic Form By TableName <LineBreak />
                        Type: Standalone External Web App with Full URL With Get/Set JS Cmd for ONE Field and Generic Form By TableName <LineBreak /> 
                        Type: Same Types Without Get/Set And Form, Clean WebApp From SystemWeb/ServerWeb/External, With APi in APP System Show App Only <LineBreak /> 
                        Type: TODO Standalone React WebServer With Startup Command And Variants Form Get/Set - or Custom API System Show Only <LineBreak />
                        Type: TODO Mutliplicable Graphs Form Form Definition By Generic API  <LineBreak />
                        </TextBlock>
                </TextBox.ToolTip>
            </TextBox>

            <Label
                x:Name="lbl_description"
                Grid.Row="2" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_description"
                Grid.Row="2" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" />

            <Label
                x:Name="lbl_isMultiFormType"
                Grid.Row="3" Grid.Column="0" Margin="30,2,0,2"
                HorizontalAlignment="Left"  />
            <CheckBox
                x:Name="chb_isMultiFormType"
                Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Checked="MenuTypeSelected" ToolTip="Enable If Is Multi Form Type" Unchecked="MenuTypeSelected" />
            
            
            <Label
                x:Name="lbl_isSystemWebModule" Grid.Row="3" Grid.Column="0"
                Margin="0,2,0,2" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_isSystemWebModule" Grid.Row="3" Grid.Column="1"
                Margin="0,2,0,2" HorizontalAlignment="Left" VerticalAlignment="Center"
                Checked="ModuleTypeSelected" IsEnabled="False">
                <CheckBox.ToolTip>
                    <TextBlock>
                        Its Generate System Form Without VARCHAR(MAX)<LineBreak /> type [Description field is Generated Only],<LineBreak /> Its Running in local Web Server</TextBlock>
                </CheckBox.ToolTip>
            </CheckBox>
            <Label
                x:Name="lbl_isServerUrl" Grid.Row="3" Grid.Column="1" Margin="170,2,0,2" HorizontalAlignment="Left" />
            <CheckBox
                x:Name="chb_isServerUrl" Grid.Row="3" Grid.Column="1" Margin="200,0,2,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                Checked="ModuleTypeSelected" IsEnabled="False" ToolTip="Enable If Is Url From Server, IP:Port will be inserted Automatically" />
            <Label
                x:Name="lbl_isWebServer" Grid.Row="3" Grid.Column="1"
                Margin="0,0,30,0" HorizontalAlignment="Right" />
            <CheckBox
                x:Name="chb_isWebServer" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"
                Checked="IsServerEnabled" ToolTip="Enable If Is Url From Server, IP:Port will be inserted Automatically" Unchecked="IsServerEnabled" />

            <GroupBox
                x:Name="gb_startupSetting" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
                <Grid Background="{DynamicResource WhiteBrush}" Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    

                    <Label x:Name="lbl_devModeEnabled" Grid.Row="0" Grid.Column="1" Margin="0,0,30,0" HorizontalAlignment="Right" />
                    <CheckBox x:Name="chb_devModeEnabled" Grid.Row="0" Grid.Column="1" 
                              HorizontalAlignment="Right" VerticalAlignment="Center" Checked="IsServerEnabled" ToolTip="Enable Dev Mode For Debuging and Scripting" />
                    
                    <Label x:Name="lbl_showHelpTab" Grid.Row="0" Grid.Column="2" Margin="0,0,30,0" HorizontalAlignment="Right" />
                    <CheckBox x:Name="chb_showHelpTab" Grid.Row="0" Grid.Column="2"
                            Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" Checked="HelpTabChecked_Changed" Unchecked="HelpTabChecked_Changed">
                        <CheckBox.ToolTip>
                            <TextBlock> Show Next Tab Of Module For Show Manual/Helps/Preparing Data/etc.<LineBreak /> Allowed Are Startup files: index.html, help.html, example.html OR same.md</TextBlock>
                        </CheckBox.ToolTip>
                    </CheckBox>
                    
                    <Label x:Name="lbl_helpTabShowOnly" Grid.Row="0" Grid.Column="3" Margin="0,0,30,0" HorizontalAlignment="Right" />
                    <CheckBox x:Name="chb_helpTabShowOnly" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0"
                            Checked="HelpTabChecked_Changed" ToolTip="This Set Help Tab as ReadOnly" Unchecked="HelpTabChecked_Changed" />

                    <!--URLs INFORMATIONS-->
                    <Label x:Name="lbl_startupUrl" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" />
                    <TextBox x:Name="txt_startupUrl" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch"
                            Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" 
                             ToolTip="Its Url or Part Url Adress (If is Server Url) for WebBrowser" />

                    <Label
                            x:Name="lbl_helpTabUrl" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
                    <TextBox x:Name="txt_helpTabUrl" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Stretch"
                            Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" ToolTip="URL Path to Help.html file " />

                    
                    
                </Grid>
            </GroupBox>





           



            <Label
                x:Name="lbl_startupSubFolder"
                Grid.Row="8" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_startupSubFolder"
                Grid.Row="8" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" ToolTip="Insert Program Folder Name in System/AddOn/WebSrvData Folder example: ReactApp" />

            <Label
                x:Name="lbl_startupCommand"
                Grid.Row="9" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_startupCommand"
                Grid.Row="9" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" ToolTip="System Startup Command in Folder exsamle: Node script.js" />

            

            <Label
                x:Name="lbl_active"
                Grid.Row="11" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_active"
                Grid.Row="11" Grid.Column="1"
                VerticalAlignment="Center" />


            <Button
                Name="btn_save"
                Grid.Row="15" Grid.Column="0"
                Click="BtnSave_Click"
                Style="{StaticResource DefaultSystemSaveButtonStyle}" />

            <Button
                Name="btn_cancel"
                Grid.Row="15" Grid.Column="1"
                Click="BtnCancel_Click"
                Style="{DynamicResource DefaultSystemCancelButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>