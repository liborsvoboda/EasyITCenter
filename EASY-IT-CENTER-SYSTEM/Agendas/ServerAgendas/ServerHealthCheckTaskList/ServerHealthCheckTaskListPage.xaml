<UserControl
    x:Class="EasyITCenter.Pages.ServerHealthCheckTaskListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EasyITCenter.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="500"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" IsReadOnly="True" MouseDoubleClick="DgListView_MouseDoubleClick" SelectionChanged="DgListView_SelectionChanged" SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource WhiteBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="110" />
            </Grid.RowDefinitions>

            <Label
                x:Name="lbl_id"
                Grid.Row="0" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_id"
                Grid.Row="0" Grid.Column="1"
                Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" HideUpDownButtons="True" IsEnabled="False" ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_taskName"
                Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_taskName"
                Grid.Row="1" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" ToolTip="This is HeathCheck Task Name in Server Checker View" />

            <GroupBox
                x:Name="gb_type"
                Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="5">
                <Grid Background="{DynamicResource WhiteBrush}" Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <RadioButton
                        x:Name="rb_driveSizeCheck"
                        Grid.Row="0" Grid.Column="0"
                        Margin="0,2,0,2"
                        Checked="TypeSelectionClick" GroupName="Type" />
                    <RadioButton
                        x:Name="rb_folderExistCheck"
                        Grid.Row="0" Grid.Column="1"
                        Margin="0,2,0,2"
                        Checked="TypeSelectionClick" GroupName="Type" />
                    <RadioButton
                        x:Name="rb_processMemoryCheck"
                        Grid.Row="0" Grid.Column="2"
                        Margin="0,2,0,2"
                        Checked="TypeSelectionClick" GroupName="Type" />
                    <RadioButton
                        x:Name="rb_allocatedMemoryCheck"
                        Grid.Row="0" Grid.Column="3"
                        Margin="0,2,0,2"
                        Checked="TypeSelectionClick" GroupName="Type" />

                    <RadioButton
                        x:Name="rb_pingCheck"
                        Grid.Row="1" Grid.Column="0"
                        Margin="0,2,0,2"
                        Checked="TypeSelectionClick" GroupName="Type" />
                    <RadioButton
                        x:Name="rb_tcpPortCheck"
                        Grid.Row="1" Grid.Column="1"
                        Margin="0,2,0,2"
                        Checked="TypeSelectionClick" GroupName="Type" />
                    <RadioButton
                        x:Name="rb_serverUrlPathCheck"
                        Grid.Row="1" Grid.Column="2"
                        Margin="0,2,0,2"
                        Checked="TypeSelectionClick" GroupName="Type" />
                    <RadioButton
                        x:Name="rb_urlPathCheck"
                        Grid.Row="1" Grid.Column="3"
                        Margin="0,2,0,2"
                        Checked="TypeSelectionClick" GroupName="Type" />

                    <RadioButton
                        x:Name="rb_mssqlConnectionCheck"
                        Grid.Row="2" Grid.Column="0"
                        Margin="0,2,0,2"
                        Checked="TypeSelectionClick" GroupName="Type" />
                    <RadioButton
                        x:Name="rb_mysqlConnectionCheck"
                        Grid.Row="2" Grid.Column="1"
                        Margin="0,2,0,2"
                        Checked="TypeSelectionClick" GroupName="Type" />
                    <RadioButton
                        x:Name="rb_oracleConnectionCheck"
                        Grid.Row="2" Grid.Column="2"
                        Margin="0,2,0,2"
                        Checked="TypeSelectionClick" GroupName="Type" />
                    <RadioButton
                        x:Name="rb_postgresConnectionCheck"
                        Grid.Row="2" Grid.Column="3"
                        Margin="0,2,0,2"
                        Checked="TypeSelectionClick" GroupName="Type" />
                </Grid>
            </GroupBox>

            <Label
                x:Name="lbl_serverDrive"
                Grid.Row="3" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                Visibility="Hidden" />
            <TextBox
                x:Name="txt_serverDrive"
                Grid.Row="3" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" MaxLength="50" ToolTip="Insert Server Drive Name for Check Minimum MB Free Space" Visibility="Hidden" />

            <Label
                x:Name="lbl_sizeMb"
                Grid.Row="4" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                Visibility="Hidden" />
            <Controls:NumericUpDown
                x:Name="txt_sizeMb"
                Grid.Row="4" Grid.Column="1"
                Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.Watermark="" Maximum="9999999" Minimum="1" ToolTip="Set MegaBytes (MB) Value" Visibility="Hidden" />

            <Label
                x:Name="lbl_folderPath"
                Grid.Row="3" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                Visibility="Hidden" />
            <TextBox
                x:Name="txt_folderPath"
                Grid.Row="3" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" MaxLength="1024" ToolTip="Insert Full Folder Path for check existing." Visibility="Hidden" />

            <Label
                x:Name="lbl_ipAddress"
                Grid.Row="3" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                Visibility="Hidden" />
            <TextBox
                x:Name="txt_ipAddress"
                Grid.Row="3" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" MaxLength="15" ToolTip="Insert IP Address" Visibility="Hidden" />

            <Label
                x:Name="lbl_port"
                Grid.Row="4" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                Visibility="Hidden" />
            <Controls:NumericUpDown
                x:Name="txt_port"
                Grid.Row="4" Grid.Column="1"
                Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.Watermark="" Maximum="65535" Minimum="1" ToolTip="Set MegaBytes (MB) Value" Visibility="Hidden" />

            <Label
                x:Name="lbl_serverUrlPath"
                Grid.Row="3" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                Visibility="Hidden" />
            <TextBox
                x:Name="txt_serverUrlPath"
                Grid.Row="3" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" MaxLength="1024" ToolTip="Insert URL Server Path without Server Address. Example: /AdminApiDocs  " Visibility="Hidden" />

            <Label
                x:Name="lbl_urlPath"
                Grid.Row="3" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                Visibility="Hidden" />
            <TextBox
                x:Name="txt_urlPath"
                Grid.Row="3" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" MaxLength="1024" ToolTip="Insert Full URL Path." Visibility="Hidden" />

            <Label
                x:Name="lbl_dbSqlConnection"
                Grid.Row="3" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                Visibility="Hidden" />
            <TextBox
                x:Name="txt_dbSqlConnection"
                Grid.Row="3" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" MaxLength="1024" ToolTip="Insert Valid Connection string for selected DB type" Visibility="Hidden" />

            <Label
                x:Name="lbl_active"
                Grid.Row="7" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_active"
                Grid.Row="7" Grid.Column="1"
                VerticalAlignment="Center" />

            <Button
                Name="btn_save"
                Grid.Row="10" Grid.Column="0"
                Width="200" Height="40"
                Margin="44,21,0,44" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Click="BtnSave_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
            <Button
                Name="btn_cancel"
                Grid.Row="10" Grid.Column="1"
                Width="200" Height="40"
                Margin="44,21,44,44" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Click="BtnCancel_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>