<UserControl
    x:Class="EasyITSystemCenter.Pages.SolutionSchedulerListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="clr-namespace:EasyITSystemCenter"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:EasyITSystemCenter.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="500"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">
    <Grid
        Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" IsReadOnly="True" MouseDoubleClick="DgListView_MouseDoubleClick" SelectionChanged="DgListView_SelectionChanged" SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource WhiteBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="120" />
                <RowDefinition Height="80" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <Label
                x:Name="lbl_id"
                Grid.Row="0" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />

            <Controls:NumericUpDown
                x:Name="txt_id"
                Grid.Row="0" Grid.Column="1"
                Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" HideUpDownButtons="True" IsEnabled="False" />

            <Label
                x:Name="lbl_inheritedGroupName"
                Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_inheritedGroupName"
                Grid.Row="1" Grid.Column="1"
                Margin="0,2,0,2" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Controls:TextBoxHelper.ClearTextButton="false" Controls:TextBoxHelper.IsWaitingForData="True" DisplayMemberPath="Translation" IsEnabled="true" SelectedValuePath="Name" SelectionChanged="ComboBoxShowToolTipOnChange" />

            <Label
                x:Name="lbl_name"
                Grid.Row="2" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_name"
                Grid.Row="2" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" />

            <Label
                x:Name="lbl_sequence"
                Grid.Row="3" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_sequence"
                Grid.Row="3" Grid.Column="1"
                Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" HideUpDownButtons="False" Interval="10" NumericInputMode="Numbers"
                ToolTip="{ext:Info Title=FastInfo,
                                   Body=Sequence for same table mst be unique}" />

            <Label
                x:Name="lbl_email"
                Grid.Row="4" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_email"
                Grid.Row="4" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark=""
                ToolTip="{ext:Info Title=FastInfo,
                                   Body=Insert Email address or email address List with `;` separator}" />

            <Label
                x:Name="lbl_data"
                Grid.Row="5" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_data"
                Grid.Row="5" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" />

            <Label
                x:Name="lbl_description"
                Grid.Row="6" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_description"
                Grid.Row="6" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" />


            <Label
                x:Name="lbl_startNowOnly"
                Grid.Row="7" Grid.Column="0"
                Margin="0,0,0,0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" />
            <CheckBox
                x:Name="chb_startNowOnly"
                Grid.Row="7" Grid.Column="1"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Checked="StartNowOnlyChanged" Unchecked="StartNowOnlyChanged" />

            <Label
                x:Name="lbl_startAt"
                Grid.Row="7" Grid.Column="1"
                Margin="0,0,410,0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <xctk:DateTimePicker
                x:Name="dp_startAt"
                Grid.Row="7" Grid.Column="1"
                Width="150"
                Margin="0,0,250,2" HorizontalAlignment="Right"
                Controls:TextBoxHelper.ClearTextButton="True" AutoCloseCalendar="True" CalendarDisplayMode="Month" Format="Custom" FormatString="dd.MM.yyyy HH:mm:ss" IsTabStop="True" TextAlignment="Left"
                TimePickerVisibility="Visible" />


            <Label
                x:Name="lbl_finishAt"
                Grid.Row="7" Grid.Column="1"
                Margin="0,0,160,0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <xctk:DateTimePicker
                x:Name="dp_finishAt"
                Grid.Row="7" Grid.Column="1"
                Width="150"
                Margin="0,0,0,2" HorizontalAlignment="Right"
                Controls:TextBoxHelper.ClearTextButton="True" AutoCloseCalendar="True" CalendarDisplayMode="Month" Format="Custom" FormatString="dd.MM.yyyy HH:mm:ss" IsTabStop="True" TextAlignment="Left"
                TimePickerVisibility="Visible" />


            <Label
                x:Name="lbl_interval"
                Grid.Row="8" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_interval"
                Grid.Row="8" Grid.Column="1"
                Width="100"
                Margin="0,2,0,2" HorizontalAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" HideUpDownButtons="False" Interval="60" Minimum="1" NumericInputMode="Numbers"
                ToolTip="{ext:Info Title=FastInfo,
                                   Body=Interval for Task Cycling}" />

            <ComboBox
                x:Name="cb_inheritedIntervalType"
                Grid.Row="8" Grid.Column="1"
                Width="80"
                Margin="120,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Center"
                Controls:TextBoxHelper.ClearTextButton="false" Controls:TextBoxHelper.IsWaitingForData="True" DisplayMemberPath="Translation" IsEnabled="true" SelectedValuePath="Name" />

            <Label
                x:Name="lbl_active"
                Grid.Row="8" Grid.Column="1"
                Margin="0,0,25,0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" />
            <CheckBox
                x:Name="chb_active"
                Grid.Row="8" Grid.Column="1"
                HorizontalAlignment="Right" VerticalAlignment="Center" />


            <Grid
                x:Name="SubListView"
                Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBox
                    x:Name="txt_processData"
                    Grid.Row="1" Grid.Column="0"
                    Margin="0,0,0,0"
                    Controls:TextBoxHelper.Watermark="" AcceptsReturn="True" IsReadOnly="True" TextWrapping="Wrap" ToolTip="Process Data" VerticalScrollBarVisibility="Visible" />

                <TextBox
                    x:Name="txt_processLog"
                    Grid.Row="2" Grid.Column="0"
                    Margin="0,0,0,0"
                    Controls:TextBoxHelper.Watermark="" AcceptsReturn="True" IsReadOnly="True" TextWrapping="Wrap" ToolTip="Process Log" VerticalScrollBarVisibility="Visible" />

                <DataGrid
                    x:Name="DgSubListView"
                    Grid.Row="1" Grid.RowSpan="2" Grid.Column="1"
                    Width="{Binding Path=ActualWidth, ElementName=SubListView}"
                    Height="{Binding Path=ActualHeight, ElementName=SubListView}"
                    HorizontalAlignment="Stretch" VerticalAlignment="Top" HorizontalContentAlignment="Stretch"
                    AutoGenerateColumns="True" AutoGeneratedColumns="DgSubListView_Translate" IsReadOnly="True" MouseDoubleClick="DgSubListView_MouseDoubleClick" SelectionChanged="DgSubListView_SelectionChanged" SelectionMode="Single" />
            </Grid>




            <Button
                Name="btn_save"
                Grid.Row="10" Grid.Column="0"
                Width="200" Height="40"
                Margin="44,10,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Click="BtnSave_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />

            <Button
                Name="btn_cancel"
                Grid.Row="10" Grid.Column="1"
                Width="200" Height="40"
                Margin="44,10,44,10" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Click="BtnCancel_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>